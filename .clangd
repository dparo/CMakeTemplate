---
CompileFlags:
  CompilationDatabase: build/debug/

  Add:
    - -Wall
    - -Wextra
    - -Wunreachable-code
    - -Wunreachable-code-aggressive

Style:
    FullyQualifiedNamespaces:
      - std

InlayHints:
  Designators: true
  Enabled: true
  ParameterNames: true
  DeducedTypes: true


Diagnostics:
    UnusedIncludes: Strict
